<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Test</title>
        <link rel="stylesheet" type="text/css" href="/css/style.css">
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
    </head>
    <body>
        <div class="container">
            <fieldset>
                <form action="/weather" method="post">
                    <input name="latitude" type="text" class="ghost-input" placeholder="Enter Latitude" required>
                    <input name="longitude" type="text" class="ghost-input" placeholder="Enter Longitude" required>
                    <input type="submit" class="ghost-button" value="Get Weather">
                </form>
                <% if(weather !== null){ %>
                    <p><%= weather %></p>
                  <% } %>
                  <% if(error !== null){ %>
                    <p><%= error %></p>
                  <% } %>
            </fieldset>
            <table>
                <tr>
                    <th>City</th>
                    <th>Temperature</th>
                </tr>

                <% if(campbell !== null){ %>
                <tr>
                    <td>Campbell, CA</td>
                    <td>
                        <%= campbell %>
                    </td>
                </tr>
                <% } %>

                <% if(omaha !== null){ %>
                <tr>
                    <td>Omaha, NE</td>
                    <td>
                        <%= omaha %>
                    </td>
                </tr>
                <% } %>

                <% if(austin !== null){ %>
                <tr>
                    <td>Austin, TX</td>
                    <td>
                        <%= austin %>
                    </td>
                </tr>
                <% } %>

                <% if(timonium !== null){ %>
                <tr>
                    <td>Timonium, MD</td>
                    <td>
                        <%= timonium %>
                    </td>
                </tr>
                <% } %>
                
            </table>
        </div>
    </body>
</html>